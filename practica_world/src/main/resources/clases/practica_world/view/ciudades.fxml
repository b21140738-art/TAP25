<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="clases.practica_world.controller.CiudadesController"
      spacing="15" style="-fx-padding: 20;">

<stylesheets>
    <URL value="@../vistas.css" />
</stylesheets>

<Label fx:id="lblPais" text="Ciudades del País" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
<Label fx:id="lblTotalCiudades" text="Total de ciudades: 0" style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;" />

<TableView fx:id="tablaCiudades" VBox.vgrow="ALWAYS">
    <columns>
        <TableColumn fx:id="colId" text="ID" prefWidth="60" />
        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200" />
        <TableColumn fx:id="colDistrito" text="Distrito" prefWidth="150" />
        <TableColumn fx:id="colPoblacion" text="Población" prefWidth="120" />
    </columns>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
</TableView>
</VBox>